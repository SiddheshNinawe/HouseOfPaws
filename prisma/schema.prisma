// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Pets {
  id          String   @id @default(cuid())
  name        String
  type        String
  breed       String
  pic         String
  gender      String
  age         Int
  description String
  isAdopted   Boolean
  adoptedBy   String?
  createdAt   DateTime @default(now())
  updateAt    DateTime @updatedAt
}
